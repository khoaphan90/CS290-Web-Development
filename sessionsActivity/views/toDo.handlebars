<h1>Hello {{name}} Here is your To Do List!</h1>
<h2>You have {{toDoCount}} items on your to do list.</h2>
<form method="post">
  <input type="text" name="name" id="toDoName">
  <label for="name">Name:</label>
    <input type="text" name="name" id="toDoName">
  <label for="zip">ZIP:</label>
    <input type="number" name="zip" id="location">
  <label for="minTemp">Min. Temperature:</label>
    <input type="number" name="minTemp" id="toDo_minTemp">
  <label for="maxTemp">Max. Temperature:</label>
    <input type="number" name="maxTemp" id="toDo_maxTemp">
  <input type="submit" name="Add City" value="Add City">
</form>
{{#if toDo}}
<ul>
  {{#each toDo}}
  <li>
    <h3>{{this.name}}</h3>
    <li>Zipcode: {{ this.zip }}</li>
    <li>Min Temp: {{ this.minTemp }}</li>
    <li>Max Temp: {{ this.maxTemp }}</li>
    <form method="post">
      <input type="hidden" name="id" value="{{this.id}}">
      <input type="submit" name="Done" value="Mark as Done">
    </form>
  </li>
  {{/each}}
</ul>
{{/if}}

