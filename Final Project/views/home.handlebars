<link rel="stylesheet" type="text/css" href="style.css">

<form method="get" action="/insert" id="input">
<fieldset class="info">
<legend>Enter information</legend>
	<label class="type">Name:</label>
		<input type="text" name="name" placeholder="work-out name" required>
    <br>
	<label class="type">Reps:</label>
		<input type="number" name="reps" min="0">
    <br>
	<label class="type">Weight:</label>
		<input type="number" name="weight" min="0">
    <br>
	<label class="type">Date:</label>
		<input type="date" name="date">
    <br>
	<label class="type">Unit:</label>
  <select name="unit">
  	<option value="0">kg</option>
    <option value="1">lbs</option>
  </select>
  <br><br>

	<input type="submit" name="submit">

</fieldset>
<br>
</form>

<table id="main" border="">
    <tr>
      <th>Name</th>
      <th>Reps</th>
      <th>Weight</th>
      <th>Date</th>
      <th>Units</th>
    </tr>

    {{#if results}}
        {{#each results}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.reps}}</td>
                <td>{{this.weight}}</td>
                <td>{{this.date}}</td>
                <td>{{this.unit}}</td> 

                <td>
                    <form id={{this.id}} method="get" action="/update">
                      <input type="hidden" name="id" value={{ this.id }} />
                        <label class="type">Name:</label>
                            <input type="text" name="name" value={{ this.name }} />
                            <br>
                        <label class="type">Reps:</label>
                            <input type="number" name="reps" value={{ this.reps }} min="0" />
                            <br>
                        <label class="type">Weight:</label>
                            <input type="number" name="weight" value={{ this.weight }} min="0" />
                            <br>
                        <label class="type">Date:</label>
                            <input type="date" name="date" value={{this.date}}/>
                            <br>
                        <label class="type">Unit:</label>
                            <select name="unit">
                                <option value="0">kg</option>
                                <option value="1">lbs</option>
                            </select>

                            <br>
                        <button type="submit" name="button1">Edit</button><br>
                    </form>
                <td>

                </td>

                <td>
                    <form method="get" action="/delete">
                      <input type="hidden" name="id" value="{{this.id}}">
                      <button type="submit" id="delete">Delete</button>
                    </form>
                </td>

            </tr>

        {{/each}}
    {{/if}}

</table>

<script type="text/javascript" src="source.js"></script>